<!DOCTYPE html>
<html lang="en">

<head>
   <% include /templates/head %>
</head>

<body>
    <div id="wrapper">
        <% include /templates/header %>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Cadastro de Cliente</h1>
                    </div>
                    <div class="panel-body">
                        <div class="tab-pane fade in active" id="home">

                            <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Id</th>                                            
                                            <th>Nome</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                        <tbody>
                                            <% if ( clientes.length > 0 ) { %>
                                                <% for(var i =0; i < clientes.length; i++ ) {%>
                                                            <tr class="odd gradeX">
                                                            <td><%= clientes[i].id %></td>  
                                                            <td><%= clientes[i].nome %></td>                                              
                                                        <td class="center">
                                                            <a class="btn btn-info" href="/editarCliente/id:<%=  clientes[i].id   %>">
                                                            <i class="glyphicon glyphicon-edit icon-white"></i>
                                                                Alterar
                                                            </a>
                                                            <button class="btn btn-danger" data-toggle="modal" data-target="#<%= clientes[i].id %>">
                                                                <i class="glyphicon glyphicon-trash icon-white"></i>
                                                                Deletar
                                                            </button>
                                                            <!-- Modal 1 -->
                                                            <div class="modal fade" id="<%= clientes[i].id %>" tabindex="-1" role="dialog" aria-labelledby="<%= clientes[i].id %>Label" aria-hidden="true">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                            <h4 class="modal-title" id="myModal1Label">Exclusão de Dados</h4>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            Deseja realmente excluir registro?
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                                                            <a class="btn btn-primary" href="/excluirCliente/id:<%=  clientes[i].id   %>">
                                                                                Confirmar
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                    <!-- /.modal-content -->
                                                                </div>
                                                                <!-- /.modal-dialog -->
                                                            </div>
                                                            <!-- /.modal -->
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            <% } %>
                                        </tbody>
                                    </table>
                                    <a class="btn btn-info" href="novoCliente">
                                        <i class="glyphicon glyphicon-plus-sign icon-white"></i>
                                        Novo Registro
                                    </a>
                                </div>
                            </div>
                        </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <% include /templates/footer %>
</body>

</html>
