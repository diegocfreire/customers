<!DOCTYPE html>
<html lang="en">

<head>
   <% include /templates/head %>
</head>

<body>
  <div id="wrapper">
  <% include /templates/header %>
    <!-- Page Content -->
      <div id="page-wrapper">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                      <h1 class="page-header">Cadastro de Clientes</h1>
                  </div>
                  <!-- /.col-lg-12 -->
              </div>
              <div class="row">
                  <div class="col-lg-12">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                                Edição de Clientes
                          </div>
                          <div class="panel-body">
                            <% if(validacao.length > 0){ %>
                                <div class="panel-body">
                                <% for(var i = 0; i < validacao.length; i++) {%>
                                    <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <a href="#" class="alert-link">Erro:</a>.<%= validacao[i].msg %>
                                    </div>
                                <% } %>
                                </div>
                            <% } %>
                            <form role="form" action="/salvarCliente" method="post">
                                <div class="row">
                                      <div class="col-lg-6">

                                        <div class="form-group">
                                           <label>Registro</label>
                                           <input class="form-control disabled" readonly="true" name="_id" id="_id" placeholder="Registro do Cliente" value="<%= ( clientes.length == 1 ? clientes[0].id : "" ) %>">
                                        </div>

                                        <div class="form-group">
                                           <label>Nome</label>
                                           <input class="form-control" name="nome" id="nome" placeholder="Nome" value="<%= ( clientes.length == 1 ? clientes[0].nome : "" ) %>">
                                        </div>


                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">Salvar</button>
                                        <button type="reset" class="btn btn-danger" onclick="window.location.href='/clienteListar'">Cancelar</button>
                                    </div>
                                        <!-- Modal -->
                                    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModal1Label" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="myModal1Label">Salvando os Dados</h4>
                                                </div>
                                                <div class="modal-body">
                                                        Deseja realmente salvar o registro?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                                    <button type="submit" class="btn btn-primary">Confirmar</button>
                                                </div>
                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <% include /templates/footer %>
</body>

</html>
